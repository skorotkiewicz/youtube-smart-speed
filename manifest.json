{
	"manifest_version": 2,
	"name": "YouTube Smart Speed - AI Playback Control",
	"version": "2.0.0",
	"description": "Intelligent YouTube playback speed control using AI. Automatically speeds up during silence and slows down during speech. Fully configurable by user.",
	"applications": {
		"gecko": {
			"id": "youtube-smart-speed@skorotkiewicz.dev"
		}
	},
	"permissions": ["storage", "tabs", "activeTab"],
	"content_scripts": [
		{
			"matches": [
				"*://*.youtube.com/*",
				"*://youtube.com/*",
				"*://*.vimeo.com/*",
				"*://vimeo.com/*",
				"*://player.vimeo.com/*",
				"*://*.dailymotion.com/*",
				"*://dailymotion.com/*",
				"*://*.twitch.tv/*",
				"*://twitch.tv/*",
				"*://*.netflix.com/*",
				"*://netflix.com/*",
				"*://*.disneyplus.com/*",
				"*://disneyplus.com/*"
			],
			"js": ["src/js/services.js", "src/js/brain.js", "src/js/content.js"],
			"css": ["src/css/overlay.css"],
			"run_at": "document_idle"
		}
	],
	"options_ui": {
		"page": "src/html/options.html",
		"open_in_tab": true
	},
	"background": {
		"scripts": ["src/js/background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "src/html/popup.html",
		"default_title": "YouTube Smart Speed"
	},
	"icons": {
		"48": "icons/icon48.svg",
		"96": "icons/icon128.svg"
	},
	"web_accessible_resources": [],
	"homepage_url": "https://github.com/skorotkiewicz/youtube-smart-speed",
	"author": "Sebastian Korotkiewicz"
}
