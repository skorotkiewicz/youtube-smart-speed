{
	"manifest_version": 2,
	"name": "YouTube Smart Speed - AI Playback Control",
	"version": "2.0.0",
	"description": "Inteligentne sterowanie prędkością odtwarzania YouTube z użyciem AI. Automatycznie przyspiesza podczas ciszy i spowalnia podczas mowy. Pełna konfiguracja przez użytkownika.",
	"permissions": ["storage", "tabs", "activeTab"],
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*", "*://youtube.com/*"],
			"js": ["brain.js", "content.js"],
			"css": ["overlay.css"],
			"run_at": "document_idle"
		}
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "YouTube Smart Speed"
	},
	"web_accessible_resources": [],
	"homepage_url": "https://github.com/skorotkiewicz/youtube-smart-speed",
	"author": "Sebastian Korotkiewicz"
}
